{
  "name": "spotify-mini-player",
  "version": "1.0.0",
  "description": "A mini Spotify player overlay widget for Windows",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "keywords": ["spotify", "music", "player", "overlay", "widget"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "express": "^4.18.2"
  },
  "build": {
    "appId": "com.spotifyminiplayer.app",
    "productName": "Spotify Mini Player",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Spotify Mini Player"
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    }
  }
}